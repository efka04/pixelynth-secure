  },
  "devDependencies": {
    "chai": "^5.2.0",
    "eslint": "^8.15.0",
    "eslint-config-google": "^0.14.0",
    "firebase-functions-test": "^3.1.0",
    "mocha": "^11.1.0",
    "sinon": "^19.0.4"
  },
  "private": true
}
